<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo do círculo (pode deixar transparente se quiser só a borda) -->
    <solid android:color="#e6e6e6" />

    <!-- Borda da imagem -->
    <stroke
        android:width="3dp"
        android:color="#2196F3" /> <!-- Azul -->

    <!-- Deixa a forma redonda -->
    <corners android:radius="500dp" />

    <!-- Espaçamento interno -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>
